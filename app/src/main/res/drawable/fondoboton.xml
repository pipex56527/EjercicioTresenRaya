<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#76767A"
                android:endColor="#131314"
                android:angle="90"
                />
            <corners android:radius="@dimen/radio_boton"/>
        </shape>
    </item>



    <item android:state_enabled="false">
        <shape>
            <solid android:color="#154B94"/>
            <corners android:radius="@dimen/radio_boton"/>
        </shape>
    </item>



    <item>
        <shape>
            <gradient android:startColor="#131314"
                android:endColor="#76767A"
                android:angle="90"
                />
            <corners android:radius="@dimen/radio_boton"/>
        </shape>
    </item>

</selector>